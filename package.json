{
  "name": "hytzenshop",
  "version": "1.0.0",
  "main": "index.js",
  "private": "true",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/@settings/*",
      "apps/*"
    ]
  },
  "author": "Samara Carvalho <samcarvalhos@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepare": "husky install",
    "web": "yarn workspace @hytzenshop/web",
    "adm": "yarn workspace @hytzenshop/adm",
    "luma": "yarn workspace @luma/ui",
    "hooks": "yarn workspace @hytzenshop/hooks",
    "types": "yarn workspace @hytzenshop/types",
    "helpers": "yarn workspace @hytzenshop/helpers"
  },
  "devDependencies": {
    "@hytzenshop/eslint": "*",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "typescript": "^4.9.3"
  }
}
