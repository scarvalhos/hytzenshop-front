{
  "name": "hytzenshop",
  "version": "1.0.0",
  "main": "index.js",
  "private": "true",
  "workspaces": {
    "packages": [
      "packages/*",
      "packages/@settings/*"
    ]
  },
  "author": "Samara Carvalho <samcarvalhos@hotmail.com>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepare": "husky install",
    "api:dev": "yarn workspace @hytzenshop/api dev",
    "web:dev": "yarn workspace @hytzenshop/web dev",
    "adm:dev": "yarn workspace @hytzenshop/adm dev",
    "luma:build": "yarn workspace @luma/ui build"
  },
  "devDependencies": {
    "@hytzenshop/eslint": "*",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "typescript": "^4.9.3"
  }
}
